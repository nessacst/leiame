{% extends "layout.njk" %}

{% set title = "Biblioteca Leia-me" %}

{% block content %}


<h1 class="my-5 text-center">{{ title }}</h1> 
<hr>

<section class="card-deck">
  {% for livroget in livros %}
  <div class="col-sm-6 col-lg-4 col-xl-3 mb-3">
    <div class="card">

     <img src="{{ livroget.image }}" class="card-img-top" alt="{{ livroget.name }}">
  <div class="card-body">
    <h5 class="card-title">{{ livroget.name }}</h5>
   </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">AUTOR: {{ livroget.autor }} </li>
    <li class="list-group-item">EDITORA: {{ livroget.editora }}</li>
    <li class="list-group-item">EDIC√ÉO: {{ livroget.edicao }}</li>
  </ul>
       
    </div>
  </div>
  {% endfor %}
</section>


{% endblock %}

